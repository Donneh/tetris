<Window x:Class="TetrisClient.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TetrisClient"
        mc:Ignorable="d"
        Title="MainMenuWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SinglePlayerButton" Content="Single Player" HorizontalAlignment="Left" Margin="250,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.301,0.628" Height="48" Width="97" Click="StartSinglePlayer"/>

        <Button x:Name="MultiPlayerButton" Content="MultiPlayer" HorizontalAlignment="Left" Margin="350,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.301,0.628" Height="48" Width="97" Click="StartMultiPlayer" />

    </Grid>
</Window>