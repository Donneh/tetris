<Window x:Class="TetrisClient.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TetrisClient"
        mc:Ignorable="d"
        Title="MainMenuWindow" Height="450" Width="800">
    <Grid Background="Gray">
        <Button x:Name="SinglePlayerButton" Foreground="#FFFFF161" Background="Black" FontFamily="Showcard Gothic" Content="Single Player" HorizontalAlignment="Left" Margin="236,188,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.301,0.628" Height="67" Width="122" Click="StartSinglePlayer"/>

        <Button x:Name="MultiPlayerButton"  Foreground="#FFFFF161" Background="black" FontFamily="Showcard Gothic" Content="MultiPlayer" HorizontalAlignment="Left" Margin="400,188,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.301,0.628" Height="67" Width="127" Click="StartMultiPlayer" />

    </Grid>
</Window>