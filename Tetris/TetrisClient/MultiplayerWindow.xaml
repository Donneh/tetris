        <Button Content="Invoke ReadyUp message" Click="StartGame_OnClick" Margin="294,400,293,158" Panel.ZIndex="2"></Button>
        <TextBlock x:Name="levelTxt" VerticalAlignment="Top"   TextWrapping="Wrap" Height="35" Width="170" Foreground="#FFFFF161" FontSize="20" FontFamily="Showcard Gothic" TextAlignment="Center" Background="Black" Text="Level: 0" Margin="64,0,531,0"/>
